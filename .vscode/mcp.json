{
  "servers": {
    "github": { 
      "type": "http", 
      "url": "https://api.githubcopilot.com/mcp" 
    },

    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@microsoft/mcp-server-playwright"]
    },

    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },

    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": { "BRAVE_API_KEY": "" }
    },

    "filesystem": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-filesystem", "--root", "${workspaceFolder}"]
    },

    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-git"]
    },

    "sqlite": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-sqlite", "--db-path", "${workspaceFolder}/.cache/harvest.db"]
    },

    "openapi": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-openapi", "--spec-dir", "${workspaceFolder}/openapi"]
    }
  }
}